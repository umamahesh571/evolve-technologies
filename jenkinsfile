pipeline {
    agent any

    tools {
        maven 'Maven 3.8.8'    // Ensure this matches Jenkins tool config
        jdk 'Java 17'          // Ensure Java 17 is installed in Jenkins
    }

    environment {
        WAR_NAME = "evolve-technologies.war"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/umamahesh571/evolve-technologies.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Publish WAR') {
            steps {
                archiveArtifacts artifacts: 'target/*.war', fingerprint: true
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sh 'cp target/*.war /path/to/tomcat/webapps/'  // Replace with your actual Tomcat path
            }
        }
    }
}
